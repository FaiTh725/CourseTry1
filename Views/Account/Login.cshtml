@model LoginViewModel

@{
    Layout = "_AccountLayout";
}

<div class="main_inner">
    
    <div class="main_inner--body">
        <h2 class="main_inner--text">Личный кабинет</h2>
        <img class="main_inner--logo" src="~/img/bntu-logo.png" width="100" height="100" alt="icon bntu" />
        <div ></div>
        <form class="main_inner--form" asp-asp-controller="Account" asp-action="Login" method="post" asp-anti-forgery="true">
            <div class="main_inner--values">
                <label class="main_inner--label" asp-for="Login">Логин</label>
                <input class="main_inner--input" asp-for="Login" type="text"/>
                <span class="main_inner--validation" asp-validation-for="Login"></span>
            </div>
            <div class="main_inner--values">
                <label class="main_inner--label" asp-for="Password">Пароль</label>
                <input class="main_inner--input" asp-for="Password" />
                <span class="main_inner--validation" asp-validation-for="Password"></span>
            </div>
            <div class="main_inner--container-btn">
                <input class="btn" type="submit" value="Войти"/>
                <a class="btn" href="Registered">Регистрация</a>                
            </div>
        </form>
    </div>
</div>
